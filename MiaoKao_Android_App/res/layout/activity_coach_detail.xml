<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/coach_detail_common_actionbar"
        layout="@layout/include_header_layout" />

    <com.miaokao.android.app.widget.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_actionbar_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dip" >

                <com.miaokao.android.app.widget.RoundAngleImageView
                    android:id="@+id/coach_detail_icon_image"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:src="@drawable/head_image_default" />

                <TextView
                    android:id="@+id/coach_detail_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="小杰"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/coach_detail_user_info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_marginTop="10dip"
                android:background="@color/color_FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="综合评分"
                        android:textColor="@color/color_000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coach_detail_grade_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="0.0分"
                        android:textColor="@color/color_000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="match_parent"
                    android:layout_margin="10dip"
                    android:background="@color/color_50FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dip" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/coach_detail_hp_layout"
                            android:layout_width="0dip"
                            android:layout_height="5dip"
                            android:layout_weight="1"
                            android:background="@drawable/comment_haoping_bg"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/coach_detail_hp_txt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#E63E32" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/coach_detail_h_grade_txt"
                            android:layout_width="60dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:text="好评  (0)"
                            android:textColor="#E63E32"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/coach_detail_zp_layout"
                            android:layout_width="0dip"
                            android:layout_height="5dip"
                            android:layout_weight="1"
                            android:background="@drawable/comment_zhongping_bg"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/coach_detail_zp_txt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#EB8122" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/coach_detail_z_grade_txt"
                            android:layout_width="60dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:text="中评  (0)"
                            android:textColor="#EB8122"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/coach_detail_cp_layout"
                            android:layout_width="0dip"
                            android:layout_height="5dip"
                            android:layout_weight="1"
                            android:background="@drawable/comment_chaping_bg"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/coach_detail_cp_txt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F3C464" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/coach_detail_c_grade_txt"
                            android:layout_width="60dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:text="差评  (0)"
                            android:textColor="#F3C464"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/color_FFFFFF"
                android:orientation="vertical"
                android:paddingTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingBottom="5dip"
                    android:text="学员评价"
                    android:textColor="#F3C464"
                    android:textSize="14sp" />

                <View style="@style/view_line_style" />

                <com.miaokao.android.app.widget.MListView
                    android:id="@+id/coach_comment_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none" >
                </com.miaokao.android.app.widget.MListView>
            </LinearLayout>

            <TextView
                android:id="@+id/coach_detail_look_lce_txt"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/bt_bg_selector"
                android:drawableRight="@drawable/ic_list_arrow"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:text="教练证"
                android:textColor="@color/color_000000"
                android:textSize="14sp" />
        </LinearLayout>
    </com.miaokao.android.app.widget.CustomerScrollView>

</LinearLayout>
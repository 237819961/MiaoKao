<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/my_feedback_common_actionbar"
        layout="@layout/include_header_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:text="请留下您对喵考学车的意见和建议,感谢您的支持与帮助!"
        android:textColor="@color/text_color"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical"
        android:padding="5dip" >

        <EditText
            android:id="@+id/feedback_content_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_main_bg"
            android:gravity="top|left"
            android:maxLines="5"
            android:minLines="5"
            android:padding="3dip" />
    </LinearLayout>

    <Button
        android:id="@+id/feedback_bt"
        android:layout_width="220dip"
        android:layout_height="35dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:background="@drawable/bt_guide_selector"
        android:text="确认提交"
        android:textColor="@color/color_FFFFFF"
        android:textSize="14sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:background="@drawable/bt_bg_selector" >

        <com.miaokao.android.app.widget.RoundAngleImageView
            android:id="@+id/item_driving_coach_icon_iv"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:src="@drawable/head_image_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="6dip"
            android:paddingLeft="6dip"
            android:paddingRight="10dip"
            android:paddingTop="6dip" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                <TextView
                    android:id="@+id/item_driving_coach_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="小渥"
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />
                
                <TextView
                    android:id="@+id/item_driving_coach_school_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="10dip"
                    android:text="撒旦驾校"
                    android:textColor="#FFC817"
                    android:textSize="12sp" />
                    
                </LinearLayout>

                <TextView
                    android:id="@+id/item_driving_coach_price_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="$6789"
                    android:textColor="#E21A31"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_driving_coach_changdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:singleLine="true"
                android:text="广人驾校训练场"
                android:textColor="@color/color_000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_driving_coach_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:singleLine="true"
                android:text="25niansdasd"
                android:textColor="@color/text_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
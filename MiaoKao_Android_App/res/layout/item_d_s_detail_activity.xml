<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_d_s_course_type"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="C1" />

        <LinearLayout
            android:id="@+id/item_d_s_detail_class_bt"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_d_s_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品质班"
                android:textColor="@color/color_000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_d_s_course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:drawablePadding="2dip"
                android:drawableRight="@drawable/b_s_lv_tab_nolmar"
                android:text="(周一到周日)"
                android:textColor="@color/color_50FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_d_s_course_p_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8080元"
                    android:textColor="@color/color_000000"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/item_d_s_course_p_price_line_view"
                    android:layout_width="2dip"
                    android:layout_height="1dip"
                    android:layout_centerInParent="true"
                    android:background="@color/color_D91818"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_d_s_course_stu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:text="2000元"
                android:textColor="@color/color_F44440"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_d_s_detail_apply_bt"
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:background="@drawable/bt_guide_selector"
                android:padding="5dip"
                android:text="报名"
                android:textColor="@color/color_FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/user_info_common_actionbar"
        layout="@layout/include_header_layout" />

    <RelativeLayout
        android:id="@+id/user_info_head_ayout"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@drawable/bt_bg_selector"
        android:paddingLeft="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="@color/color_000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/my_info_tag_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:src="@drawable/ic_list_arrow" />

        <com.miaokao.android.app.widget.RoundAngleImageView
            android:id="@+id/my_info_icon_image"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/my_info_tag_iv"
            android:src="@drawable/head_image_default" />
    </RelativeLayout>

    <View
        style="@style/view_line_style"
        android:layout_marginLeft="10dip" />

    <LinearLayout
        android:id="@+id/my_info_name_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/bt_bg_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/color_000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:drawableRight="@drawable/ic_list_arrow"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="张三"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/view_line_style"
        android:layout_marginLeft="10dip" />

    <LinearLayout
        android:id="@+id/my_info_sex_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/bt_bg_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/color_000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_sex_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:drawableRight="@drawable/ic_list_arrow"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="男"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/view_line_style"
        android:layout_marginLeft="10dip" />

    <LinearLayout
        android:id="@+id/my_info_address_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/bt_bg_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接送地址"
            android:textColor="@color/color_000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_address_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:drawableRight="@drawable/ic_list_arrow"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="深圳"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/view_line_style"
        android:layout_marginLeft="10dip" />

    <LinearLayout
        android:id="@+id/my_info_school_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/bt_bg_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校"
            android:textColor="@color/color_000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_school_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:drawableRight="@drawable/ic_list_arrow"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="拉花大学"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/view_line_style"
        android:layout_marginLeft="10dip" />

    <LinearLayout
        android:id="@+id/my_info_major_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/bt_bg_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业"
            android:textColor="@color/color_000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_major_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:drawableRight="@drawable/ic_list_arrow"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="张三"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/view_line_style"
        android:layout_marginLeft="10dip" />

    <LinearLayout
        android:id="@+id/my_info_age_layout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/bt_bg_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:textColor="@color/color_000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_info_age_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:drawableRight="@drawable/ic_list_arrow"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="张三"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
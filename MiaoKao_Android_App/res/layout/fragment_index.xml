<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/index_common_actionbar"
        layout="@layout/include_header_layout" />

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/index_refresh_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        ptr:ptrAnimationStyle="flip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/index_go_driving_txt"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/bt_bg_selector"
                android:gravity="center"
                android:text="@string/go_driving_school_txt"
                android:textColor="@color/main_tab_txt_normal"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/index_reserved_service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/index_prepare_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="46dip"
                    android:background="@drawable/bt_bg_selector"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 报名"
                            android:textColor="@color/color_000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/index_prepare_state_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:paddingLeft="10dip"
                            android:singleLine="true"
                            android:text="完成"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/index_prepare_state_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/checkbox_btn_selector" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/index_km_one_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="46dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/bt_bg_selector"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 科目一"
                            android:textColor="@color/color_000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/index_km_one_state_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:paddingLeft="12dip"
                            android:singleLine="true"
                            android:text="完成"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/index_km_one_state_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/checkbox_btn_selector" />
                </RelativeLayout>

                <View style="@style/view_line_style" />

                <RelativeLayout
                    android:id="@+id/index_km_two_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="46dip"
                    android:background="@drawable/bt_bg_selector"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 科目二"
                            android:textColor="@color/color_000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/index_km_two_state_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:paddingLeft="12dip"
                            android:singleLine="true"
                            android:text="完成"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/index_km_two_state_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/checkbox_btn_selector" />
                </RelativeLayout>

                <View style="@style/view_line_style" />

                <RelativeLayout
                    android:id="@+id/index_km_three_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="46dip"
                    android:background="@drawable/bt_bg_selector"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 科目三"
                            android:textColor="@color/color_000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/index_km_three_state_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:paddingLeft="12dip"
                            android:singleLine="true"
                            android:text="完成"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/index_km_three_state_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/checkbox_btn_selector" />
                </RelativeLayout>

                <View style="@style/view_line_style" />

                <RelativeLayout
                    android:id="@+id/index_km_four_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="46dip"
                    android:background="@drawable/bt_bg_selector"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 科目四"
                            android:textColor="@color/color_000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/index_km_four_state_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:paddingLeft="12dip"
                            android:singleLine="true"
                            android:text="完成"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/index_km_four_state_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/checkbox_btn_selector" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/index_km_ok_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="46dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/bt_bg_selector"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 领取驾照"
                            android:textColor="@color/color_000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/index_km_ok_state_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:paddingLeft="12dip"
                            android:singleLine="true"
                            android:text="完成"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/index_km_ok_state_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/checkbox_btn_selector" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>
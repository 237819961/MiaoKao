<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_actionbar_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dip" >

        <com.miaokao.android.app.widget.RoundAngleImageView
            android:id="@+id/coach_detail_icon_image"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:src="@drawable/head_image_default" />

        <TextView
            android:id="@+id/coach_detail_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="小杰"
            android:textColor="@color/color_FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/coach_detail_user_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textColor="@color/color_FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
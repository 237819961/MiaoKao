<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/course_one_common_actionbar"
        layout="@layout/include_header_layout" />

    <TextView
        android:id="@+id/course_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/color_FFFFFF"
        android:padding="10dip"
        android:text="@string/course_one_info_txt"
        android:textColor="@color/color_000000"
        android:textSize="12sp" />

    <Button
        android:id="@+id/course_one_ok_bt"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="-10dip"
        android:layout_marginRight="-10dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/bt_guide_selector"
        android:text="去做题库"
        android:textColor="@color/color_FFFFFF"
        android:textSize="14sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/item_training_ground_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="训练场1"
            android:textColor="@color/color_000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_training_ground_code_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/item_training_ground_name_txt"
            android:text="场地代码"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_training_ground_isselect_txt"
            android:layout_width="wrap_content"
            android:layout_height="38dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_bg_selector"
            android:drawableRight="@drawable/checkbox_btn_selector" />
    </RelativeLayout>

    <View
        style="@style/view_line_style"
        android:layout_marginLeft="10dip" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="#038601" />

            <solid android:color="#038601" />

            <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="#04BE02" />

            <gradient android:angle="-90" android:endColor="#04BE02" android:startColor="#04BE02" />

            <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />
        </shape></item>

</selector>
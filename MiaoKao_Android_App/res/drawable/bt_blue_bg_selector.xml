<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="#000000" />

            <gradient android:angle="-90" android:endColor="#4890D4" android:startColor="#4890D4" />

        </shape></item>
        
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="#000000" />

            <gradient android:angle="-90" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />

        </shape></item>

</selector>